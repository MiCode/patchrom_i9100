<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="48.0px" android:textStyle="bold" android:textColor="#ff7799ff" android:gravity="center" android:id="@id/text_current" android:background="#ff222222" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/test_rssi" android:layout_centerVertical="true" />
        <EditText android:id="@id/edit_rssi" android:layout_width="200.0px" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:inputType="number" />
    </RelativeLayout>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/test_start_freq" android:layout_centerVertical="true" />
        <EditText android:id="@id/edit_start" android:layout_width="200.0px" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:inputType="number" />
    </RelativeLayout>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/test_end_freq" android:layout_centerVertical="true" />
        <EditText android:id="@id/edit_end" android:layout_width="200.0px" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:inputType="number" />
    </RelativeLayout>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/btn_start" android:layout_width="200.0px" android:layout_height="wrap_content" android:text="@string/test_start" />
        <Button android:id="@id/btn_end" android:layout_width="200.0px" android:layout_height="wrap_content" android:text="@string/test_stop" android:layout_toRightOf="@id/btn_start" />
        <CheckBox android:id="@id/check_lcd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="@string/test_lcd_on" android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>
